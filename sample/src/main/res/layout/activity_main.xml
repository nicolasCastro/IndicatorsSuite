<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/testList"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <com.thinkup.dotsindicator.DotsView
            android:id="@+id/dotsRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotSelectedColor="@color/colorPrimary"
            app:dotUnselectedColor="@color/colorPrimary"
            app:dotMargin="15dp"
            app:dotSelectedWidth="50dp"
            app:dotHeight="20dp"
            app:dotWidth="20dp"
            app:borders="false"
            app:gradient="true"
            app:gradientSelectedPercentage="100"
            app:gradientNearPercentage="85"
            app:gradientFarPercentage="70"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testList"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/testNextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:id="@+id/testPreviousView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.thinkup.dotsindicator.DotsView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotSelectedColor="@color/colorAccent"
            app:dotUnselectedColor="@color/colorPrimary"
            app:dotMargin="15dp"
            app:dotSelectedWidth="50dp"
            app:dotHeight="20dp"
            app:dotWidth="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    <com.thinkup.dotsindicator.DotsView
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotSelectedColor="@drawable/gradient"
            app:dotUnselectedColor="@color/loader_unselected"
            app:dotMargin="8dp"
            app:itemsCount="4"
            app:loader="true"
            app:rounded="false"
            app:dotSelectedWidth="18dp"
            android:paddingBottom="40dp"
            app:dotHeight="18dp"
            app:dotWidth="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>